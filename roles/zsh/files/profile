for i in `find -L $HOME/.local/bin -type d`; do
    PATH="$i:$PATH"
done

alias vim=nvim
alias vi=nvim
alias code=nvim
alias top=bpytop
alias ls='exa'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias fd=fd-find
alias z=zoxide
alias weather="clear && curl wttr.in"

export EDITOR='nvim'
export NVM_LAZY_LOAD=true
export NVM_COMPLETION=true
export NVM_DIR=$HOME/.nvm
export GOPATH=$HOME/go
export GOBIN=$GOPATH/bin
export ODIN_HOME=$HOME/Projects/Tools/Odin
export PATH=$PATH:$GOBIN:$GOPATH:$ODIN_HOME
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:~/.local/lib/mojo
export PATH=$PATH:~/.modular/pkg/packages.modular.com_mojo/bin

source $NVM_DIR/nvm.sh
source $HOME/.asdf/asdf.sh
source $HOME/.cargo/env

runNewTmuxSession(){
    echo; new-tmux-session; zle redisplay
}
zle -N runNewTmuxSession

bindkey ^p runNewTmuxSession
